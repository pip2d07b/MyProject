<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopbg1"
    tools:context=".ShopActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/applyPlaneView"
            android:layout_width="137dp"
            android:layout_height="112dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginStart="138dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="135dp"
            android:layout_weight="1"
            android:background="@drawable/plane" />

        <ImageButton
            android:id="@+id/shopBackbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            app:srcCompat="@drawable/coin" />

        <TextView
            android:id="@+id/shopCoinNum"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="17dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="462dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/shopbg" />

    <ImageButton
        android:id="@+id/shopPlane1"
        android:layout_width="120dp"
        android:layout_height="109dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shopplanbg"
        android:scaleType="fitXY"
        android:src="@drawable/plane" />

    <TextView
        android:id="@+id/passView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shopPlane1"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="309dp"
        android:text="$0"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shopPlane2"
        android:layout_alignTop="@+id/shopPlane2"
        android:layout_marginStart="53dp"
        android:layout_marginTop="113dp"
        android:text="$100"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shopPlane2"
        android:layout_alignTop="@+id/shopPlane2"
        android:layout_marginStart="-133dp"
        android:layout_marginTop="308dp"
        android:text="$300"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shopPlane2"
        android:layout_alignTop="@+id/shopPlane2"
        android:layout_marginStart="43dp"
        android:layout_marginTop="308dp"
        android:text="$420"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/shopPlane2"
        android:layout_width="120dp"
        android:layout_height="109dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="228dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shopplanbg"
        android:scaleType="fitXY"
        android:src="@drawable/plane2" />

    <ImageButton
        android:id="@+id/shopPlane3"
        android:layout_width="120dp"
        android:layout_height="109dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="213dp"
        android:background="@drawable/shopplanbg"
        android:scaleType="fitXY"
        android:src="@drawable/plane3" />

    <ImageButton
        android:id="@+id/shopPlane4"
        android:layout_width="120dp"
        android:layout_height="109dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="228dp"
        android:layout_marginTop="213dp"
        android:background="@drawable/shopplanbg"
        android:scaleType="fitXY"
        android:src="@drawable/plane4" />

    <Button
        android:id="@+id/shopPlanebtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopPlane1"
        android:layout_alignEnd="@+id/shopPlane1"
        android:layout_marginStart="60dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:text="Button"
        android:background="@drawable/shopbtn_bg"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shopPlanebtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/shopPlane2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="15dp"
        android:text="Button"
        android:background="@drawable/shopbtn_bg"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shopPlanebtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/shopPlane2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="192dp"
        android:text="Button"
        android:background="@drawable/shopbtn_bg"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shopPlanebtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/shopPlane2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="19dp"
        android:text="Button"
        android:background="@drawable/shopbtn_bg"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shopPlanebtn5"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/shopbtn_bg"
        android:text="Apply customized Plane" />


</RelativeLayout>